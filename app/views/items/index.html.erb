<H1>Перелік товарів</H1>
<table>
  <tr>
    <th>Назва товара</th>
    <th>Вага</th>
    <th>Доступність</th>
    <th>Опис</th>
    <th>Ціна</th>
    <th></th>
  </tr>
  <% @items.each do |item| %>
    <tr>
      <th><%= item.name %></th>
      <th><%= item.weight %></th>
      <th><%= item.real %></th>
      <th><%= item.price %></th>
      <th><%= item.description %></th>
      <th><%= link_to 'Редактування', edit_item_path(item) %></th>
      <th><%= link_to 'Видалення', item_path(item), method: :delete, data: {confirm: 'Ви впевнені що хочете видалити?'} %></th>
    </tr>
  <% end %>

</table>